# Stock Analysis Audit Database - Environment Configuration
# Copy this file to .env and update values as needed

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=audit_password
DB_NAME=stock_analysis_audit

# Connection Pool Settings
DB_POOL_SIZE=5

# Audit Configuration
AUDIT_MAX_RESPONSE_SIZE=10240
AUDIT_MAX_REQUEST_SIZE=10240
AUDIT_RETENTION_DAYS=30
AUDIT_ENABLE_METRICS=true
AUDIT_ENABLE_REQUEST_LOG=true
AUDIT_ENABLE_EXTERNAL_LOG=true
